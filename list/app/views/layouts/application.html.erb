<!DOCTYPE html>
<html>
<head>
  <title>List</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= link_to "LIST", "/strokes/index" %>

	<%= form_tag Stroke, :method => 'get' do %>
		<%= text_field :query, params[:query] %>
		<%= submit_tag "Search", :name => nil, :class => "btn btn-default" %>
	<% end %>

	<table class = "table">
		<tbody>
			<%= form_for Stroke.new do |f| %>
				<td><%= f.text_field :tags, :class => "form-control", :placeholder => "tag" %>
				<td><%= f.text_area :content, :class => "form-control", :placeholder => "content" %>
				<td><%= f.submit :class => "btn btn-default"%>
			<% end %>
			<% @strokes.each do |stroke| %>
				<%= content_tag_for(:tr, stroke) do %>
					<td><%= image_tag stroke.icon, :size => "50x50" %></td>
					<td><%= link_to stroke.content, stroke.url %></td>
					<td><%= stroke.tags %></td>
					<td><%= stroke.like %> CHERRY</td>
					<td><%= button_to "PUSH", {:action => "push", :id => stroke.id}, :class => "btn btn-default" %></td>
					<td><%= button_to "PULL", {:action => "pull", :id => stroke.id}, :class => "btn btn-default" %></td>
				<% end %>
			<% end %>
		</tbody>
	</table>
	
	<%= yield %>

</body>
</html>
