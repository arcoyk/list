<!DOCTYPE html>
<html>
<head>
  <title>List</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style type="text/css">
  	.jumbotron {
  		background: url(<%= asset_path @random_jumbotron_img %>);
  		background-position: center center;
		background-size: cover;
  	}
  </style>
</head>
<body>
	<%= render 'strokes/twitter_login.html.erb' %>
	<textarea id="debug" cols="100" rows="3">
		<% @all_strokes.each do |stroke| %>
			<%= stroke.content %>
		<% end %>
	</textarea>
	<%= render 'strokes/jumbotron.html.erb' %>
	<div class = "container">
		<%= render 'strokes/film_stroke.html.erb' %>
		<table class = "table">
			<tbody>
				<%= render 'strokes/stroke_form.html.erb' %>
				<%= render 'strokes/stroke_all.html.erb' %>
			</tbody>
		</table>
	</div>
</body>
</html>
